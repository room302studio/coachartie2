# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# File paths (optional - defaults provided)
DISCORD_STATUS_FILE=/app/data/discord-status.json
DISCORD_METRICS_FILE=/app/data/discord-metrics.json
DISCORD_EVENTS_FILE=/app/data/discord-events.json

# Health check server port
HEALTH_PORT=47319

# Capabilities service endpoint
CAPABILITIES_BASE_URL=http://localhost:47324

# Redis configuration (for BullMQ)
REDIS_URL=redis://localhost:6379

# Log level
LOG_LEVEL=info

# Observational Learning Configuration
# Enable passive learning from watching guilds
ENABLE_OBSERVATIONAL_LEARNING=false
# Number of messages to batch before processing (default: 20)
OBSERVATION_BATCH_SIZE=20
# Time in milliseconds before processing incomplete batches (default: 300000 = 5 minutes)
OBSERVATION_BATCH_TIME_MS=300000
# Capabilities service URL for observation processing
CAPABILITIES_URL=http://localhost:47324

# Guild Whitelist (comma-separated guild IDs)
# Example: DISCORD_GUILD_WHITELIST=932719842522443928,1420846272545296470
DISCORD_GUILD_WHITELIST=