# Coach Artie 2 Production Configuration
# Copy this to .env.production and fill in your production values
# IMPORTANT: Keep .env.production secret and NEVER commit it to git

# ============================================
# REQUIRED - Production API Keys
# ============================================

# OpenRouter API Key - PRODUCTION key from https://openrouter.ai
OPENROUTER_API_KEY=sk-or-v1-your-production-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODELS=anthropic/claude-3.5-sonnet
FAST_MODEL=anthropic/claude-3-haiku

# Discord Bot - PRODUCTION token from https://discord.com/developers/applications
DISCORD_TOKEN=your-production-discord-bot-token
DISCORD_CLIENT_ID=your-production-discord-application-id

# ============================================
# OPTIONAL - Production Feature Keys
# ============================================

# SMS (Twilio) - Production credentials from https://twilio.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Embeddings (OpenAI) - Production key from https://platform.openai.com
OPENAI_API_KEY=

# Calculations (Wolfram Alpha) - Production key from https://developer.wolframalpha.com
WOLFRAM_APP_ID=

# Email (n8n webhook) - Production webhook URL
EMAIL_WEBHOOK_URL=
EMAIL_WEBHOOK_AUTH=

# ============================================
# PRODUCTION SETTINGS
# ============================================

NODE_ENV=production
LOG_LEVEL=info
CONSOLE_LOG_LEVEL=warn

# Database and storage paths (Docker volume mounts)
DATABASE_PATH=/app/data/coachartie.db
LOGS_DIR=/app/logs

# Service ports (match docker-compose.prod.yml)
REDIS_HOST=redis
REDIS_PORT=47320
CAPABILITIES_PORT=47324
DISCORD_PORT=47321
SMS_PORT=47326
BRAIN_PORT=47325

# ============================================
# LEARNING & MEMORY
# ============================================

# Enable automatic reflection (recommended for production)
# Creates capability-specific memories that improve tool usage over time
ENABLE_AUTO_REFLECTION=true

# Context window settings
CONTEXT_WINDOW_SIZE=8000
CONTEXT_ALCHEMY_DEBUG=false
